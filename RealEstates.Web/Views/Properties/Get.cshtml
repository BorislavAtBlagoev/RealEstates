@model IEnumerable<RealEstates.Services.Models.PropertyViewModel>


<h1>Properties: </h1>

<table class="table table-striped table-hover">
    <tr>
        <th>District</th>
        <th>Building type</th>
        <th>Property type</th>
        <th>Price</th>
        <th>Size</th>
        <th>Floor</th>
        <th>Year</th>
    </tr>

    @foreach (var item in Model.OrderByDescending(x => x.Price).Take(100))
    {
        <tr>
            <td>@item.District</td>
            <td>@item.BuildingType</td>
            <td>@item.PropertyType</td>
            <td>@item.Price.ToString("0.00")€</td>
            <td>@item.Size</td>
            <td>@item.Floor</td>
            <td>@item.Year</td>
        </tr>
    }
</table>

