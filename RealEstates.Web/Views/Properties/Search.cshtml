@model PropertySearchByPriceRequestModel

<h1>Search property by price</h1>

<form method="post" action="Search" class="col-md-6">
    <div>
        Min price: <input name="MinPrice" class="form-control"/>
    </div>
    <div>
        Max price: <input name="MaxPrice" class="form-control"/>
    </div>
    <hr />
    <input type="submit" class="btn-primary float-right" value="Search" />
</form>